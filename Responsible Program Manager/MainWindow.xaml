<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Responsible_Program_Manager"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Responsible_Program_Manager.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="395" MinWidth="750">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="AllSoft_grid" Grid.Column="1" Visibility="Visible">
            <ListBox x:Name="AllApps_ExplorerListBox" Margin="25,48,25,238" MouseDoubleClick="AllApps_ExplorerListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Width="32" Height="32" Margin="5,0" Source="{Binding IconPath}" />
                            <TextBlock Grid.Column="2" Text="{Binding Name}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="4" Text="{Binding Publisher}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="8" Text="{Binding InstalledVersion}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="6" Text="{Binding Version}" VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button x:Name="apply_btn" Grid.Column="1" Content="Применить" Margin="0,0,25,10" HorizontalAlignment="Right" Width="119" Height="25" VerticalAlignment="Bottom" Click="ApplyButton_Click"/>
            <ComboBox x:Name="apply_mode_combobox" Grid.Column="1" Margin="25,0,163,10" Height="25" VerticalAlignment="Bottom" SelectedIndex="2">
                <Label x:Name="OnlyDownload_label" Content="Только загрузить"/>
                <Label x:Name="OnlyInstall_label" Content="Только установить"/>
                <Label x:Name="DownloadAndInstall_label" Content="Загрузить и установить"/>
            </ComboBox>
            <ListBox x:Name="Selected_ExplorerListBox" Margin="25,0,25,53" Height="148" VerticalAlignment="Bottom" MouseDoubleClick="Selected_ExplorerListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <!-- Для изображения -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для Name -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для Publisher -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для Version -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для InstalledVersion -->
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Width="32" Height="32" Margin="5,0" Source="{Binding IconPath}" />
                            <TextBlock Grid.Column="2" Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="4" Text="{Binding Publisher}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="6" Text="{Binding Version}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="8" Text="{Binding InstalledVersion}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Label x:Name="selected_apps_label" Content="Выбранные приложения:" Margin="25,0,279,203" FontSize="16" MinHeight="32" MinWidth="211" Height="32" VerticalAlignment="Bottom"/>
            <Label x:Name="all_apps_label" Content="Приложения:" Margin="25,11,392,0" FontSize="16" MinHeight="32" Height="32" VerticalAlignment="Top" MinWidth="139"/>
            <ComboBox x:Name="categories_cb" Margin="0,16,25,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" SelectionChanged="CategoriesComboBox_SelectionChanged"/>
            <Label x:Name="categories_label" Content="Категории:" Margin="322,11,150,0" FontSize="16" MinHeight="32" Height="32" VerticalAlignment="Top" HorizontalContentAlignment="Right" MinWidth="91"/>
            <TextBox x:Name="all_search_textbox" Margin="223,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" ToolTip="Поиск" Tag="Поиск" Text="Поиск" MouseEnter="all_search_textbox_MouseEnter" MouseLeave="all_search_textbox_MouseLeave" TextChanged="all_search_textbox_TextChanged" HorizontalAlignment="Left" Width="108"/>
            <Button x:Name="clear_selected_list_btn" Content="Очистить список выбранных" Margin="0,0,25,205" HorizontalAlignment="Right" Width="170" Height="28" VerticalAlignment="Bottom" MinWidth="165" MinHeight="28" Click="clear_selected_list_btn_Click" />
        </Grid>
        <StackPanel>
            <Separator Height="23"/>
            <Button x:Name="all_soft_btn" Content="Найти программы" Margin="5 0 5 10" Click="Button_Click"/>
            <Button x:Name="cached_soft_btn" Content="Загруженное ПО" Margin="5 0 5 0" Click="cached_soft_btn_Click"/>
            <Separator Height="23"/>
            <Button x:Name="settings_btn" Content="Настройки" Margin="5 0 5 10" Click="settings_btn_Click"/>
            <Button x:Name="about_btn" Content="Разработчики" Margin="5 0 5 10" Click="About_btn_Click"/>
            <ComboBox x:Name="LanguageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged" Margin="5 0 5 10" Height="28">
                <ComboBoxItem Content="Русский/Russian" Tag="ru" />
                <ComboBoxItem Content="English/Английский" Tag="en" />
            </ComboBox>
            <Separator Height="16"/>
            <TextBlock x:Name="status_label" Text="Приложение готово к работе." Height="208" TextWrapping="WrapWithOverflow" Width="174"/>
        </StackPanel>
        <Grid x:Name="Cachedsoft_grid" Grid.Column="1" Visibility="Hidden">
            <ListBox x:Name="cached_AllApps_ExplorerListBox" Margin="25,48,25,238" MouseDoubleClick="cached_AllApps_ExplorerListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Width="32" Height="32" Margin="5,0" Source="{Binding IconPath}" />
                            <TextBlock Grid.Column="2" Text="{Binding Name}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="4" Text="{Binding Publisher}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="8" Text="{Binding InstalledVersion}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="6" Text="{Binding Version}" VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="cached_Selected_ExplorerListBox" Margin="25,0,25,53" Height="148" VerticalAlignment="Bottom" MouseDoubleClick="cached_Selected_ExplorerListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <!-- Для изображения -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для Name -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для Publisher -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для Version -->
                                <ColumnDefinition Width="10" />
                                <!-- Отступ -->
                                <ColumnDefinition Width="100" />
                                <!-- Для InstalledVersion -->
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Width="32" Height="32" Margin="5,0" Source="{Binding IconPath}" />
                            <TextBlock Grid.Column="2" Text="{Binding Name}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="4" Text="{Binding Publisher}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="6" Text="{Binding Version}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="8" Text="{Binding InstalledVersion}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Label x:Name="cached_selected_apps_label" Content="Выбранные приложения:" Margin="25,0,25,203" FontSize="16" MinHeight="32" MinWidth="211" Height="32" VerticalAlignment="Bottom"/>
            <Label x:Name="cached_all_apps_label" Content="Приложения:" Margin="25,11,347,0" FontSize="16" MinHeight="32" Height="32" VerticalAlignment="Top" MinWidth="139"/>
            <ComboBox x:Name="cached_categories_cb" Margin="0,16,25,0" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" SelectionChanged="CategoriesComboBox_SelectionChanged"/>
            <Label x:Name="cached_categories_label" Content="Категории:" Margin="305,11,150,0" FontSize="16" MinHeight="32" Height="32" VerticalAlignment="Top" HorizontalContentAlignment="Right" MinWidth="91"/>


            <Button x:Name="cached_apply_btn" Content="Установить" Margin="0,0,25,10" HorizontalAlignment="Right" Width="119" Height="25" VerticalAlignment="Bottom" Click="cached_ApplyButton_Click"/>
            <Button x:Name="refresh_btn" HorizontalAlignment="Right" Margin="0,10,268,0" VerticalAlignment="Top" Height="33" Width="37" Click="refresh_btn_Click">
                <Image x:Name="refresh_icon" Height="32" Width="32" Loaded="refresh_icon_Loaded" />
            </Button>
            <Grid/>

        </Grid>
        <Grid x:Name="Settings_grid" Grid.Column="1" Visibility="Hidden">
            <CheckBox x:Name="open_cache_folder_cb" Content="После загрузки открывать папку с ПО" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Padding="4,0,0,0" Width="305" MinWidth="308" MinHeight="20" MaxHeight="20" ToolTip="Если включено, постоянно открывает папку с кэшем, если программа была загружена в кэш."/>

            <Button x:Name="save_settings_btn" Content="Сохранить настройки" Margin="0,0,23,21" Height="26" VerticalAlignment="Bottom" MinWidth="175" MinHeight="26" HorizontalAlignment="Right" Width="175" Click="save_settings_btn_Click"/>
            <Button x:Name="clear_cache_btn" Content="Очистить кэш загрузок" Margin="21,0,0,21" Height="26" VerticalAlignment="Bottom" MinWidth="175" MinHeight="26" Click="clear_cache_btn_Click" HorizontalAlignment="Left" Width="175"/>
            <Button x:Name="open_cache_path_btn" Content="Открыть кэш-папку" Margin="21,0,0,52" Width="174" MinWidth="175" MinHeight="26" Click="open_cache_path_btn_Click" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
            <CheckBox x:Name="md5_verify_cb" Content="Отключить проверку файлов с помощью MD5 (!)" HorizontalAlignment="Left" Margin="10,0,0,83" Padding="4,0,0,0" Width="305" MinWidth="308" MinHeight="20" MaxHeight="20" ToolTip="Может быть полезно, но небезопасно, поскольку файл при установке может повредиться." Height="20" VerticalAlignment="Bottom"/>
        </Grid>

    </Grid>
</Window>
